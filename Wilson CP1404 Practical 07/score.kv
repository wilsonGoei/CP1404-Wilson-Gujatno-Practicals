BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Clear'
            size_hint_x: 0.5
            on_press: app.handle_clear()
        TextInput:
            id: input_name
            text: ''
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Show'
            size_hint_x: 0.5
            on_press: app.handle_greet()
        Label:
            id: output_label
            text: 'Enter your score'
            color: (1, 1, 0, 1)